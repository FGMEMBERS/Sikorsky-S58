<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <path>interior.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>interieur</object-name>
    <object-name>structure</object-name>
    <object-name>siegeG</object-name>
    <object-name>siegeD</object-name>
    <object-name>bancs</object-name>
    <object-name>plafond</object-name>

    <!-- Objets transparents -->
    <object-name>intvitres</object-name>
    <object-name>intvitreG</object-name>
    <object-name>intvitreD</object-name>
    <object-name>intvitreporte</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>intvitres</object-name>
    <object-name>intvitreG</object-name>
    <object-name>intvitreD</object-name>
    <object-name>intvitreporte</object-name>
  </animation>

  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>Aircraft/Generic/Effects/glass_shader.png</texture>
    <object-name>intvitres</object-name>
    <object-name>intvitreG</object-name>
    <object-name>intvitreD</object-name>
    <object-name>intvitreporte</object-name>
  </animation>

  <!-- Planches de bord -->
  <model>
    <path>Aircraft/Sikorsky-S58/Models/Interior/Panel/panel.xml</path>
    <offsets>
      <x-m> -3.566 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  1.246 </z-m>
    </offsets>
  </model>

  <!-- Pilote -->
  <model>
    <path>Aircraft/Sikorsky-S58/Models/Pilot/pilot.xml</path>
    <offsets>
      <x-m> -2.582 </x-m>
      <y-m>  0.448 </y-m>
      <z-m>  1.180 </z-m>
    </offsets>
  </model>

  <!-- Co Pilote -->
  <model>
    <path>Aircraft/Sikorsky-S58/Models/Pilot/pilot.xml</path>
    <offsets>
      <x-m> -2.582 </x-m>
      <y-m> -0.448 </y-m>
      <z-m>  1.180 </z-m>
    </offsets>
  </model>

  <!-- Animation porte et fenêtre -->
  <animation>
    <type>translate</type>
    <object-name>intvitreporte</object-name>
    <property>instrumentation/doors/passenger/position-norm</property>
    <interpolation>
      <entry><ind> 0.0 </ind><dep> 0.0 </dep></entry>
      <entry><ind> 0.2 </ind><dep> 0.1 </dep></entry>
      <entry><ind> 0.8 </ind><dep> 1.1 </dep></entry>
      <entry><ind> 1.0 </ind><dep> 1.2 </dep></entry>
    </interpolation>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <animation>
    <type>translate</type>
    <object-name>intvitreD</object-name>
    <property>instrumentation/doors/crew/position-norm</property>
    <interpolation>
      <entry><ind> 0.0 </ind><dep> 0.0 </dep></entry>
      <entry><ind> 0.2 </ind><dep> 0.1 </dep></entry>
      <entry><ind> 0.8 </ind><dep> 0.7 </dep></entry>
      <entry><ind> 1.0 </ind><dep> 0.8 </dep></entry>
    </interpolation>
    <axis>
      <x> 1.00 </x>
      <y> 0.05 </y>
      <z> 0.00 </z>
    </axis>
  </animation>

</PropertyList>

