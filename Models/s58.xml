  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>Aircraft/Generic/Effects/glass_shader.png</texture>
    <object-name>vitreG</object-name>
    <object-name>vitreD</object-name>
    <object-name>vitres</object-name>
    <object-name>vitreporte</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>grille</object-name>
    <object-name>vitreG</object-name>
    <object-name>vitreD</object-name>
    <object-name>vitres</object-name>
    <object-name>vitreporte</object-name>
  </animation>

  <!-- Une ombre pour OSG -->
  <model>
    <name>shadowOSG</name>
    <path>Aircraft/Sikorsky-S58/Models/shadow.xml</path>
  </model>

  <!-- Intérieur -->
  <model>
    <path>Aircraft/Sikorsky-S58/Models/Interior/interior.xml</path>
    <offsets>
      <x-m> 0 </x-m>
      <y-m> 0 </y-m>
      <z-m> 0 </z-m>
    </offsets>
  </model>

  <!-- Rotor principale -->
  <model>
    <path>Aircraft/Sikorsky-S58/Models/MainRotor/mainrotor.xml</path>
    <offsets>
      <x-m> -1.367 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  2.870 </z-m>
    </offsets>
  </model>

  <!-- Rotor de queue -->
  <model>
    <path>Aircraft/Sikorsky-S58/Models/TailRotor/tailrotor.xml</path>
    <offsets>
      <x-m>  8.984 </x-m>
      <y-m> -0.283 </y-m>
      <z-m>  2.046 </z-m>
      <roll-deg>   90 </roll-deg>
      <pitch-deg>   0 </pitch-deg>
      <heading-deg> 0 </heading-deg>
    </offsets>
  </model>

  <!-- Compresssion -->
  <animation>
    <name>TrainGauche</name>
    <object-name>roueG</object-name>
    <object-name>tubeG1</object-name>
    <object-name>tubeG2</object-name>
    <object-name>tubeG3</object-name>
    <object-name>tubeG4</object-name>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>TrainGauche</object-name>
    <property>gear/gear[0]/compression-m</property>
    <interpolation>
      <entry><ind> 0 </ind><dep> -4 </dep></entry>
      <entry><ind> 1 </ind><dep> 45 </dep></entry>
    </interpolation>
    <center>
      <x-m> -2.602 </x-m>
      <y-m> -0.811 </y-m>
      <z-m> -0.597 </z-m>
    </center>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>

  <animation>
    <name>TrainDroit</name>
    <object-name>roueD</object-name>
    <object-name>tubeD1</object-name>
    <object-name>tubeD2</object-name>
    <object-name>tubeD3</object-name>
    <object-name>tubeD4</object-name>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>TrainDroit</object-name>
    <property>gear/gear[1]/compression-m</property>
    <interpolation>
      <entry><ind> 0 </ind><dep> -4 </dep></entry>
      <entry><ind> 1 </ind><dep> 45 </dep></entry>
    </interpolation>
    <center>
      <x-m> -2.602 </x-m>
      <y-m>  0.811 </y-m>
      <z-m> -0.597 </z-m>
    </center>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <animation>
    <name>TrainArriere</name>
    <object-name>roueA</object-name>
    <object-name>tubeA</object-name>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>TrainArriere</object-name>
    <property>gear/gear[2]/compression-m</property>
    <interpolation>
      <entry><ind> 0 </ind><dep> -4 </dep></entry>
      <entry><ind> 1 </ind><dep> 70 </dep></entry>
    </interpolation>
    <center>
      <x-m>  5.345 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.655 </z-m>
    </center>
    <axis>
      <x>  0 </x>
      <y> -1 </y>
      <z>  0 </z>
    </axis>
  </animation>

  <!-- Animation porte et fenêtre -->
  <animation>
    <name>PorteGauche</name>
    <object-name>porte</object-name>
    <object-name>vitreporte</object-name>
    <object-name>poigneA</object-name>
  </animation>

  <animation>
    <type>translate</type>
    <object-name>PorteGauche</object-name>
    <property>instrumentation/doors/passenger/position-norm</property>
    <interpolation>
      <entry><ind> 0.0 </ind><dep> 0.0 </dep></entry>
      <entry><ind> 0.2 </ind><dep> 0.1 </dep></entry>
      <entry><ind> 0.8 </ind><dep> 1.1 </dep></entry>
      <entry><ind> 1.0 </ind><dep> 1.2 </dep></entry>
    </interpolation>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <animation>
    <name>PorteDroite</name>
    <object-name>windowD</object-name>
    <object-name>vitreD</object-name>
    <object-name>poigneD</object-name>
  </animation>

  <animation>
    <type>translate</type>
    <object-name>PorteDroite</object-name>
    <property>instrumentation/doors/crew/position-norm</property>
    <interpolation>
      <entry><ind> 0.0 </ind><dep> 0.0 </dep></entry>
      <entry><ind> 0.2 </ind><dep> 0.1 </dep></entry>
      <entry><ind> 0.8 </ind><dep> 0.7 </dep></entry>
      <entry><ind> 1.0 </ind><dep> 0.8 </dep></entry>
    </interpolation>
    <axis>
      <x> 1.00 </x>
      <y> 0.05 </y>
      <z> 0.00 </z>
    </axis>
  </animation>

</PropertyList>

