<?xml version="1.0"?>

<PropertyList>

  <path>s58.ac</path>
  <offsets>
    <x-m> 4.570 </x-m>
    <y-m> 0.000 </y-m>
    <z-m> 0.100 </z-m>
    <roll-deg>    0.000 </roll-deg>
    <pitch-deg>   0.000 </pitch-deg>
    <heading-deg> 0.000 </heading-deg>
  </offsets>

  <animation>
    <object-name>fuselage</object-name>
    <object-name>interieur</object-name>
    <object-name>sol</object-name>
    <object-name>tail</object-name>
    <object-name>pilot</object-name>
    <object-name>copilot</object-name>
    <object-name>roueG</object-name>
    <object-name>roueD</object-name>
    <object-name>roueA</object-name>
    <object-name>tubeG1</object-name>
    <object-name>tubeG2</object-name>
    <object-name>tubeG3</object-name>
    <object-name>tubeG4</object-name>
    <object-name>tubeG5</object-name>
    <object-name>tubeG6</object-name>
    <object-name>tubeG7</object-name>
    <object-name>tubeD1</object-name>
    <object-name>tubeD2</object-name>
    <object-name>tubeD3</object-name>
    <object-name>tubeD4</object-name>
    <object-name>tubeD5</object-name>
    <object-name>tubeD6</object-name>
    <object-name>tubeD7</object-name>
    <object-name>tubeA</object-name>
    <object-name>fond</object-name>
    <object-name>hstab</object-name>
    <object-name>echappement</object-name>
    <object-name>tourgrille</object-name>
    <!-- Transparence -->
    <object-name>vitre</object-name>
    <object-name>grille</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>vitre</object-name>
  </animation>

  <!-- Rotor principale -->
  <model>
    <path>Aircraft/Sikorsky-S58/Models/MainRotor/mainrotor.xml</path>
    <offsets>
      <x-m> -1.367 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  2.870 </z-m>
    </offsets>
  </model>

  <!-- Rotor de queue -->
  <model>
    <path>Aircraft/Sikorsky-S58/Models/TailRotor/tailrotor.xml</path>
    <offsets>
      <x-m>  8.984 </x-m>
      <y-m> -0.283 </y-m>
      <z-m>  2.046 </z-m>
      <roll-deg>   90.000 </roll-deg>
      <pitch-deg>   0.000 </pitch-deg>
      <heading-deg> 0.000 </heading-deg>
    </offsets>
  </model>

  <!-- Planches de bord -->
  <model>
    <path>Aircraft/Sikorsky-S58/Models/Panel/panel.xml</path>
    <offsets>
      <x-m> -3.566 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  1.246 </z-m>
    </offsets>
  </model>

  <!-- Pilote invisible depuis le cockpit -->
  <animation>
    <type>select</type>
    <object-name>pilot</object-name>
    <condition>
      <greater-than>
        <property>sim/current-view/view-number</property>
        <value>0</value>
      </greater-than>
    </condition>
  </animation>

  <!-- Compresssion -->
  <animation>
    <type>rotate</type>
    <object-name>roueG</object-name>
    <object-name>tubeG1</object-name>
    <object-name>tubeG2</object-name>
    <object-name>tubeG3</object-name>
    <object-name>tubeG4</object-name>
    <property>gear/gear[0]/compression-m</property>
    <interpolation>
      <entry>
        <ind>  0.0 </ind>
        <dep> -4.0 </dep>
      </entry>
      <entry>
        <ind>  1.0 </ind>
        <dep> 45.0 </dep>
      </entry>
    </interpolation>
    <center>
      <x-m> -2.602 </x-m>
      <y-m> -0.811 </y-m>
      <z-m> -0.597 </z-m>
    </center>
    <axis>
      <x> -1.000 </x>
      <y>  0.000 </y>
      <z>  0.000 </z>
    </axis>
  </animation>

  <!-- Compresssion -->
  <animation>
    <type>rotate</type>
    <object-name>roueD</object-name>
    <object-name>tubeD1</object-name>
    <object-name>tubeD2</object-name>
    <object-name>tubeD3</object-name>
    <object-name>tubeD4</object-name>
    <property>gear/gear[1]/compression-m</property>
    <interpolation>
      <entry>
        <ind>  0.0 </ind>
        <dep> -4.0 </dep>
      </entry>
      <entry>
        <ind>  1.0 </ind>
        <dep> 45.0 </dep>
      </entry>
    </interpolation>
    <center>
      <x-m> -2.602 </x-m>
      <y-m>  0.811 </y-m>
      <z-m> -0.597 </z-m>
    </center>
    <axis>
      <x> 1.000 </x>
      <y> 0.000 </y>
      <z> 0.000 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>roueA</object-name>
    <object-name>tubeA</object-name>
    <property>gear/gear[2]/compression-m</property>
    <interpolation>
      <entry>
        <ind>  0.0 </ind>
        <dep> -4.0 </dep>
      </entry>
      <entry>
        <ind>  1.0 </ind>
        <dep> 70.0 </dep>
      </entry>
    </interpolation>
    <center>
      <x-m>  5.345 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.655 </z-m>
    </center>
    <axis>
      <x>  0.000 </x>
      <y> -1.000 </y>
      <z>  0.000 </z>
    </axis>
  </animation>

</PropertyList>

