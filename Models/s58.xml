<?xml version="1.0"?>

<PropertyList>

  <path>s58.ac</path>
  <offsets>
     <x-m>3.2</x-m>
     <z-m>0.1</z-m>
     <pitch-deg>0</pitch-deg>
  </offsets>

  <animation>
    <object-name>fuselage</object-name>
    <object-name>interieur</object-name>
    <object-name>sol</object-name>
    <object-name>tail</object-name>
    <object-name>pilot</object-name>
    <object-name>copilot</object-name>
    <object-name>roueG</object-name>
    <object-name>roueD</object-name>
    <object-name>roueA</object-name>
    <object-name>rotorup</object-name>
    <object-name>rotor</object-name>
    <object-name>pale1</object-name>
    <object-name>pale2</object-name>
    <object-name>pale3</object-name>
    <object-name>pale4</object-name>
    <object-name>axe1</object-name>
    <object-name>axe2</object-name>
    <object-name>axe3</object-name>
    <object-name>axe4</object-name>
    <object-name>rotortail</object-name>
    <object-name>tubeG1</object-name>
    <object-name>tubeG2</object-name>
    <object-name>tubeG3</object-name>
    <object-name>tubeG4</object-name>
    <object-name>tubeG5</object-name>
    <object-name>tubeG6</object-name>
    <object-name>tubeG7</object-name>
    <object-name>tubeD1</object-name>
    <object-name>tubeD2</object-name>
    <object-name>tubeD3</object-name>
    <object-name>tubeD4</object-name>
    <object-name>tubeD5</object-name>
    <object-name>tubeD6</object-name>
    <object-name>tubeD7</object-name>
  </animation>

<!-- Pilote invisible depuis le cockpit -->
  <animation>
    <type>select</type>
    <object-name>pilot</object-name>
    <condition>
      <greater-than>
        <property>sim/current-view/view-number</property>
        <value>0</value>
      </greater-than>
    </condition>
  </animation>

<!-- Rotation du rotor -->
<animation>
  <type>rotate</type>
  <object-name>rotorup</object-name>
  <property>rotors/main/roll-deg</property>
  <axis>
    <x> 1.000 </x>
    <y> 0.000 </y>
    <z> 0.000 </z>
  </axis>
   <center>
     <x-m> -1.371 </x-m>
     <y-m>  0.000 </y-m>
     <z-m>  2.895 </z-m>
   </center>
</animation>

<animation>
  <type>rotate</type>
  <object-name>rotorup</object-name>
  <object-name>pale1</object-name>
  <object-name>pale2</object-name>
  <object-name>pale3</object-name>
  <object-name>pale4</object-name>
  <property>rotors/main/yaw-deg</property>
  <axis>
    <x> 0.000 </x>
    <y>-1.000 </y>
    <z> 0.000 </z>
  </axis>
   <center>
     <x-m> -1.371 </x-m>
     <y-m>  0.000 </y-m>
     <z-m>  2.895 </z-m>
   </center>
</animation>

<animation>
  <type>rotate</type>
  <object-name>rotorup</object-name>
  <object-name>rotor</object-name>
  <object-name>pale1</object-name>
  <object-name>pale2</object-name>
  <object-name>pale3</object-name>
  <object-name>pale4</object-name>
  <property>rotors/main/blade[0]/position-deg</property>
   <center>
     <x-m> -1.371 </x-m>
     <y-m>  0.000 </y-m>
     <z-m>  2.895 </z-m>
   </center>
   <axis>
     <x>  0.000 </x>
     <y>  0.000 </y>
     <z>  1.000 </z>
   </axis>
</animation>

<!-- Rotation du rotor de queue -->
<animation>
  <type>rotate</type>
  <object-name>rotortail</object-name>
  <property>rotors/tail/blade[0]/position-deg</property>
   <center>
     <x-m> 8.984 </x-m>
     <y-m> 0.431 </y-m>
     <z-m> 2.046 </z-m>
   </center>
   <axis>
     <x>  0.000 </x>
     <y> -1.000 </y>
     <z>  0.000 </z>
   </axis>
</animation>

</PropertyList>
