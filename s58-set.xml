<?xml version="1.0"?>
<!--
************************************************************************
S58 simulation config.

************************************************************************
-->

<PropertyList>
	<sim include="Nasal/views.xml">

		<description>Sikorsky S58 (Yasim)</description>
		<author>BARANGER Emmanuel (3D),Reagan Thomas , Maik Justus (FDM)</author>
		<status>alpha</status>
		<aircraft-version>0.1</aircraft-version>
		<flight-model>yasim</flight-model>
		<aero>s58</aero>
		<fuel-fraction>0.8</fuel-fraction>

		<startup>
			<splash-texture>Aircraft/Sikorsky-S58/s58-splash.rgb</splash-texture>
		</startup>

		<sound>
			<path>Aircraft/Sikorsky-S58/Sounds/s58-sound.xml</path>
		</sound>

		<!--
		<instrumentation>
			<path>Aircraft/Sikorsky-S58/Models/instrumentation/instrumentation.xml</path>
		</instrumentation>
		-->

		<model>
			<path archive="y">Aircraft/Sikorsky-S58/Models/s58.xml</path>
			<s58>
				<state type="int">0</state>
				<engine type="float">0.0</engine>
				<rotor-step-deg type="float">-1.0</rotor-step-deg>
			</s58>
		</model>

		<weight n="0">
			<name>Pilot</name>
			<weight-lb>180</weight-lb>
			<max-lb>300</max-lb>
		</weight>

		<weight n="1">
			<name>Co-Pilot</name>
			<weight-lb>180</weight-lb>
			<max-lb>300</max-lb>
		</weight>

		<weight n="2">
			<name>Right Passenger</name>
			<weight-lb>0</weight-lb>
			<max-lb>300</max-lb>
		</weight>

		<weight n="3">
			<name>Middle Passenger</name>
			<weight-lb>0</weight-lb>
			<max-lb>300</max-lb>
		</weight>

		<weight n="4">
			<name>Left Passenger</name>
			<weight-lb>0</weight-lb>
			<max-lb>300</max-lb>
		</weight>

		<weight n="5">
			<name>Load</name>
			<weight-lb>0</weight-lb>
			<max-lb>800</max-lb>
		</weight>

		<help>
			<title>Sikorsky S 58 - background and help</title>
			<line></line>
			<line>Informations about the Sikorsky S58</line>
			<line></line>
		</help>
	</sim>

	<controls>
		<engines>
			<engine n="0">
				<magnetos>0</magnetos>
			</engine>
		</engines>
		<gear>
			<brake-parking>1</brake-parking>
		</gear>
		<rotor>
			<reltarget>1</reltarget>
			<maxreltorque>1</maxreltorque>
		</rotor>
	</controls>

	<instrumentation>
		<gsdi>
			<serviceable type="bool">true</serviceable>
		</gsdi>
	</instrumentation>
	<input>
		<keyboard>
			<key n="78">
				<name>N</name>
				<desc>Toggle rotor brake</desc>
				<binding>
					<command>nasal</command>
					<script>
						var p = "/controls/rotor/brake";
						setprop(p, !getprop(p));
					</script>
				</binding>
			</key>

			<key n="110">
				<name>n</name>
				<desc>Apply rotor brake</desc>
				<binding>
					<command>nasal</command>
					<script>interpolate("/controls/rotor/brake", 1.0, 2)</script>
				</binding>
				<mod-up>
					<binding>
						<command>nasal</command>
						<script>interpolate("/controls/rotor/brake", 0.0, 2)</script>
					</binding>
				</mod-up>
			</key>

			<key n="123">
				<name>{</name>
				<desc>Shutdown Engines</desc>
				<binding>
					<command>nasal</command>
					<script>s58.engines(0)</script>
				</binding>
			</key>

			<key n="125">
				<name>}</name>
				<desc>Start Engines</desc>
				<binding>
					<command>nasal</command>
					<script>s58.engines(1)</script>
				</binding>
			</key>

		</keyboard>
	</input>

	<nasal>
		<s58>
			<file>Aircraft/Sikorsky-S58/Nasal/s58.nas</file>
		</s58>
	</nasal>


	<rotors>
		<main>
			<rpm type="double">0</rpm>
		</main>
	</rotors>

</PropertyList>
